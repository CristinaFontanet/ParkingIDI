<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/link_text_material_light</item>
        <item name="colorPrimaryDark">@color/link_text_material_dark</item>
        <item name="colorAccent">#00CEFA</item>

        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="HistoricTheme" parent="@android:style/Theme.Holo">
        <item name="colorPrimary">@color/primary_dark_material_light</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_light</item>
        <item name="colorAccent">@color/primary_dark_material_light</item>

        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TitlesTheme" parent="@android:style/Theme.Holo">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/link_text_material_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="DialogsTheme" parent="@android:style/Theme.Holo">
        <item name="android:background">@drawable/main_background</item>
    </style>

    <style name="BigLetters" parent="@android:style/Theme.Holo">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="ButtonTheme" parent="@android:style/Widget.Holo.Light.Button.Small">
    </style>
</resources>
